
<h1>Course Creation</h1>


<%= form_for(@course) do |f| %>
<div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title %>
</div>
<div class="field">
        <%= f.label  :description %><br />
        <%= f.text_area :description %>
</div>

<div class="field">
	<%= f.label "Media URL or Embed Code" %><br />
	<%= f.text_field :media_url %>
<br />
<div class="field">
        <%= f.label :cost %>
$       <%= f.number_field :cost %>
</div>

<div class="actions">
        <%= f.submit "Create Course" %>
        </div>
<% end %>
